@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
<br>
<br />

<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<div class="row justify-content-center align-items-center mt-3">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="search" class="form-control" name="name" placeholder="Search by name..." />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>

    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table mt-3 table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(r=>r.Id)</td>
                <td>@Html.DisplayNameFor(r=>r.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(r=> role.Id)</td>
                    <td>@Html.DisplayFor(r=> role.RoleName)</td>

                    <partial name="_buttonsPartialView" model="@role.Id">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-4">
        <h3>There is no Roles</h3>
    </div>
}